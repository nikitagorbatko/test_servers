<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="16dp" android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#444853" />
            <gradient android:angle="90" android:endColor="#3C3750" android:startColor="#565C63" android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:padding="16dp" android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#444853" />
            <gradient android:angle="90" android:endColor="#1E1B2B" android:startColor="#34393F" android:type="linear" />
        </shape>
    </item>
</selector>