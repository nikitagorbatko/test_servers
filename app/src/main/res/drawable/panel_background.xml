<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:padding="16dp"
            android:shape="rectangle">
            <size
                android:width="72dp"
                android:height="102dp" />
            <gradient
                android:angle="180"
                android:endColor="#9F9ECD"
                android:startColor="#86CEE4"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:end="1dp"
        android:start="1dp"
        android:top="1dp">
        <shape
            android:padding="16dp"
            android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:endColor="#242231"
                android:startColor="#454A53"
                android:type="linear" />
        </shape>
    </item>
</layer-list>