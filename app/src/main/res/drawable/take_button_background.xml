<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:padding="16dp" android:shape="rectangle">
                    <gradient android:endColor="#E6158D" android:startColor="#F467EA" android:type="linear" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:end="1dp" android:start="1dp" android:top="1dp">
                <shape android:padding="16dp" android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <gradient android:angle="90" android:endColor="#413E53" android:startColor="#6A6F77" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:padding="16dp" android:shape="rectangle">
                    <gradient android:endColor="#E6158D" android:startColor="#F467EA" android:type="linear" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:end="1dp" android:start="1dp" android:top="1dp">
                <shape android:padding="16dp" android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <gradient android:angle="90" android:endColor="#242231" android:startColor="#454A53" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>