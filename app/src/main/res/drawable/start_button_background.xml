<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:padding="16dp" android:shape="rectangle">
            <gradient android:endColor="#C7C9EF" android:startColor="#B0E7F6" android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape android:padding="16dp" android:shape="rectangle">
            <gradient android:endColor="#9EA0CE" android:startColor="#85D0E5" android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>